{
	"name": "poppy-assembly",
	"displayName": "ðŸŒ¸ Poppy Assembly",
	"description": "Complete language support for Poppy Assembly (.pasm) - Multi-system retro game development for NES, SNES, Game Boy, Genesis, GBA, Master System, TurboGrafx-16, Atari 2600, Lynx, WonderSwan, and SPC700. Features IntelliSense, formatting, diagnostics, and build integration.",
	"version": "2.0.0",
	"publisher": "TheAnsarya",
	"icon": "images/icon.png",
	"author": {
		"name": "TheAnsarya"
	},
	"license": "Unlicense",
	"homepage": "https://github.com/TheAnsarya/poppy#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/TheAnsarya/poppy"
	},
	"bugs": {
		"url": "https://github.com/TheAnsarya/poppy/issues"
	},
	"galleryBanner": {
		"color": "#1a1a2e",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Formatters",
		"Linters"
	],
	"keywords": [
		"assembly",
		"assembler",
		"6502",
		"65816",
		"sm83",
		"68000",
		"m68k",
		"z80",
		"arm",
		"arm7tdmi",
		"huc6280",
		"v30mz",
		"spc700",
		"6507",
		"65sc02",
		"nes",
		"snes",
		"gameboy",
		"game boy",
		"gba",
		"genesis",
		"mega drive",
		"master system",
		"turbografx",
		"pc engine",
		"atari",
		"lynx",
		"wonderswan",
		"retro",
		"retro gaming",
		"pasm",
		"poppy"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "pasm",
				"aliases": [
					"Poppy Assembly",
					"pasm"
				],
				"extensions": [
					".pasm",
					".inc"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "pasm",
				"scopeName": "source.pasm",
				"path": "./syntaxes/pasm.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "pasm",
				"path": "./snippets/pasm.json"
			}
		],
		"commands": [
			{
				"command": "poppy.build",
				"title": "Poppy: Build Current File"
			},
			{
				"command": "poppy.buildProject",
				"title": "Poppy: Build Project"
			}
		],
		"taskDefinitions": [
			{
				"type": "poppy",
				"required": [
					"task"
				],
				"properties": {
					"task": {
						"type": "string",
						"description": "The Poppy task: 'build' or 'build-project'"
					},
					"file": {
						"type": "string",
						"description": "The file to build (for 'build' task)"
					},
					"projectFile": {
						"type": "string",
						"description": "Path to poppy.json (for 'build-project' task)"
					},
					"target": {
						"type": "string",
						"enum": [
							"nes",
							"snes",
							"gb",
							"genesis",
							"gba",
							"sms",
							"tg16",
							"a2600",
							"lynx",
							"ws",
							"spc700"
						],
						"description": "Target platform"
					},
					"output": {
						"type": "string",
						"description": "Output file path"
					}
				}
			}
		],
		"problemMatchers": [
			{
				"name": "poppy",
				"owner": "poppy",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": {
					"regexp": "^(.+)\\((\\d+)(?:,(\\d+))?\\):\\s+(error|warning):\\s+(.+)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		],
		"configuration": {
			"title": "Poppy Assembly",
			"properties": {
				"poppy.compiler.path": {
					"type": "string",
					"default": "",
					"description": "Path to the Poppy compiler executable"
				},
				"poppy.compiler.target": {
					"type": "string",
					"default": "nes",
					"enum": [
						"nes",
						"snes",
						"gb",
						"genesis",
						"gba",
						"sms",
						"tg16",
						"a2600",
						"lynx",
						"ws",
						"spc700"
					],
					"enumDescriptions": [
						"Nintendo Entertainment System (6502)",
						"Super Nintendo (65816)",
						"Game Boy / Game Boy Color (SM83)",
						"Sega Genesis / Mega Drive (M68000)",
						"Game Boy Advance (ARM7TDMI)",
						"Sega Master System / Game Gear (Z80)",
						"TurboGrafx-16 / PC Engine (HuC6280)",
						"Atari 2600 (6507)",
						"Atari Lynx (65SC02)",
						"WonderSwan / WonderSwan Color (V30MZ)",
						"SNES Audio Processor (SPC700)"
					],
					"description": "Default target platform"
				},
				"poppy.diagnostics.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable real-time diagnostics"
				},
				"poppy.formatting.opcodeColumn": {
					"type": "number",
					"default": 8,
					"description": "Column position for instruction opcodes"
				},
				"poppy.formatting.operandColumn": {
					"type": "number",
					"default": 16,
					"description": "Column position for operands"
				},
				"poppy.formatting.commentColumn": {
					"type": "number",
					"default": 40,
					"description": "Column position for comments"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTests.js",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.0",
		"@types/node": "^20.0.0",
		"@types/vscode": "^1.80.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vscode/test-electron": "^2.3.0",
		"eslint": "^8.0.0",
		"mocha": "^10.0.0",
		"typescript": "^5.0.0"
	}
}
