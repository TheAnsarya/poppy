{
	"name": "poppy-assembly",
	"displayName": "Poppy Assembly",
	"description": "Language support for Poppy Assembly (.pasm) files",
	"version": "0.1.0",
	"publisher": "TheAnsarya",
	"repository": {
		"type": "git",
		"url": "https://github.com/TheAnsarya/poppy"
	},
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"assembly",
		"6502",
		"65816",
		"nes",
		"snes",
		"gameboy",
		"retro"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "pasm",
				"aliases": [
					"Poppy Assembly",
					"pasm"
				],
				"extensions": [
					".pasm",
					".inc"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "pasm",
				"scopeName": "source.pasm",
				"path": "./syntaxes/pasm.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "pasm",
				"path": "./snippets/pasm.json"
			}
		],
		"commands": [
			{
				"command": "poppy.build",
				"title": "Poppy: Build Current File"
			},
			{
				"command": "poppy.buildProject",
				"title": "Poppy: Build Project"
			}
		],
		"taskDefinitions": [
			{
				"type": "poppy",
				"required": [
					"task"
				],
				"properties": {
					"task": {
						"type": "string",
						"description": "The Poppy task: 'build' or 'build-project'"
					},
					"file": {
						"type": "string",
						"description": "The file to build (for 'build' task)"
					},
					"projectFile": {
						"type": "string",
						"description": "Path to poppy.json (for 'build-project' task)"
					},
					"target": {
						"type": "string",
						"enum": [
							"nes",
							"snes",
							"gb"
						],
						"description": "Target architecture"
					},
					"output": {
						"type": "string",
						"description": "Output file path"
					}
				}
			}
		],
		"problemMatchers": [
			{
				"name": "poppy",
				"owner": "poppy",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": {
					"regexp": "^(.+)\\((\\d+)(?:,(\\d+))?\\):\\s+(error|warning):\\s+(.+)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		],
		"configuration": {
			"title": "Poppy Assembly",
			"properties": {
				"poppy.compiler.path": {
					"type": "string",
					"default": "",
					"description": "Path to the Poppy compiler executable"
				},
				"poppy.compiler.target": {
					"type": "string",
					"default": "nes",
					"enum": [
						"nes",
						"snes",
						"gb"
					],
					"description": "Default target architecture"
				},
				"poppy.diagnostics.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable real-time diagnostics"
				},
				"poppy.formatting.opcodeColumn": {
					"type": "number",
					"default": 8,
					"description": "Column position for instruction opcodes"
				},
				"poppy.formatting.operandColumn": {
					"type": "number",
					"default": 16,
					"description": "Column position for operands"
				},
				"poppy.formatting.commentColumn": {
					"type": "number",
					"default": 40,
					"description": "Column position for comments"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTests.js"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.0",
		"@types/node": "^20.0.0",
		"@types/vscode": "^1.80.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vscode/test-electron": "^2.3.0",
		"eslint": "^8.0.0",
		"mocha": "^10.0.0",
		"typescript": "^5.0.0"
	}
}
